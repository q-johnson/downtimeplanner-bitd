<div class="select-activity-content">
  <div class="activities-grid">
    {{#each activities}}
      <div class="activity-option" data-action="selectActivity" data-activity-type="{{this.id}}">
        <i class="{{this.icon}}"></i>
        <span>{{{this.enrichedName}}}</span>
      </div>
    {{/each}}
  </div>
</div>
